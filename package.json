	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build:auth": "nest build auth",
		"build:event": "nest build event",
		"build:gateway": "nest build gateway",
		"build:all": "yarn build:auth && yarn build:event && yarn build:gateway",
		"start:auth": "nest start auth -b swc -w --env-file auth.env",
		"start:event": "nest start event -b swc -w --env-file event.env",
		"start:gateway": "nest start gateway -b swc -w --env-file gateway.env",
		"start:all": "yarn start:auth && yarn start:event && yarn start:gateway"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.1",
		"@nestjs/config": "^4.0.2",
		"@nestjs/core": "^11.1.1",
		"@nestjs/microservices": "^11.1.1",
		"@nestjs/mongoose": "^11.0.3",
		"@nestjs/platform-express": "^11.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"mongoose": "^8.15.0",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.1",
		"@swc/cli": "^0.7.7",
		"@swc/core": "^1.11.24",
		"@types/express": "^5.0.2",
		"@types/jest": "^29.5.14",
		"@types/node": "^18",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/eslint-plugin": "^8.32.1",
		"@typescript-eslint/parser": "^8.32.1",
		"dotenv-cli": "^8.0.0",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-prettier": "^5.4.0",
		"jest": "^29.7.0",
		"prettier": "^3.5.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.1",
		"swc-loader": "^0.2.6",
		"ts-jest": "^29.3.4",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@app/database(|/.*)$": "<rootDir>/libs/database/src/$1"
		}
	}
}